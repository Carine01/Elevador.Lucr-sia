# Database
DATABASE_URL=mysql://user:password@localhost:3306/elevare_db

# OAuth
OAUTH_SERVER_URL=https://oauth.manus.im
VITE_APP_ID=your_app_id
OWNER_OPEN_ID=your_owner_open_id

# JWT (MÍNIMO 32 CARACTERES!)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_required

# Stripe (Monetização)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PRO_PRICE_ID=price_your_pro_price_id
STRIPE_PRO_PLUS_PRICE_ID=price_your_pro_plus_price_id
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Forge API (para LLM e Image Generation)
BUILT_IN_FORGE_API_URL=https://api.forge.manus.im
BUILT_IN_FORGE_API_KEY=your_forge_api_key

# Environment
NODE_ENV=development
PORT=3000

# CORS (adicione suas origens permitidas, separadas por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Feature Flags (controle de funcionalidades)
# FEATURE_LEADS=true  # Sistema de Lead Management (desabilitado por padrão)

# ==========================================
# NOTAS IMPORTANTES:
# ==========================================
# 1. JWT_SECRET deve ter NO MÍNIMO 32 caracteres
# 2. Em produção, todas as variáveis são obrigatórias
# 3. STRIPE_WEBHOOK_SECRET obtido em: https://dashboard.stripe.com/webhooks
# 4. Para testar webhooks localmente: stripe listen --forward-to localhost:3000/api/stripe/webhook
# 5. ALLOWED_ORIGINS: adicione apenas domínios confiáveis
